{
  "cli": {
    "version": ">= 13.2.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "credentialsSource": "remote"
      },
      "ios": {
        "simulator": false,
        "credentialsSource": "remote",
        "cache": {
          "key": "ios-production-{{ platform }}"
        },
        "image": "latest",
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {}
  }
}